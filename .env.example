# PostgreSQL connection string (required)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/olinda_prospector

# Prospector mode: "zappy" (food/beverage) or "lojaky" (retail/services)
PROSPECTOR_MODE=zappy

# n8n Webhook URL to receive dispatched leads
N8N_WEBHOOK_URL=https://your-n8n-instance.app/webhook/olinda-leads

# API key sent as X-API-Key header on webhook requests (optional)
N8N_WEBHOOK_API_KEY=

# Interval between scraping cycles in seconds (default: 3600 = 1 hour)
SCRAPE_INTERVAL=3600

# Dashboard web UI port (default: 8080)
DASHBOARD_PORT=8080

# Comma-separated proxy URLs for scraper rotation (optional)
# Format: http://user:pass@host:port,http://user2:pass2@host2:port2
PROXY_LIST=

# ── WhatsApp Cloud API (Official Meta API) ──
# Get these from: https://developers.facebook.com/apps → WhatsApp → API Setup
WHATSAPP_TOKEN=your-meta-access-token
WHATSAPP_PHONE_ID=your-phone-number-id
WHATSAPP_BUSINESS_ID=your-business-account-id

# Delay between WhatsApp messages in seconds (default: 3.0)
MESSAGE_DELAY=3.0
